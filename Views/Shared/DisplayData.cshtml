<table border="1">
	<tr>
		<th>Employee ID</th>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Email</th>
		<th>Role</th>
		<th>Department</th>
		<th>Action</th>
	</tr>
	@foreach (var row in Model)
	{
		<tr>
			<td>@row["EmployeeId"]</td> <!-- Corrected typo from "EmpolyeeId" -->
			<td>@row["FirstName"]</td>
			<td>@row["LastName"]</td>
			<td>@row["Email"]</td>
			<td>@row["Role"]</td>
			<td>@row["DepartmentName"]</td> <!-- Assuming DepartmentName is included in the query -->
			<td>
				<a href="@Url.Action("Edit", "Home", new { id = row["EmployeeId"] })">Edit</a> |
			</td>
		</tr>
	}
</table>