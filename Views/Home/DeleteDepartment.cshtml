@model TeamTrack.Models.Department



<div class="container">
    <h2>Delete Department</h2>
    <h4>Are you sure you want to delete this department?</h4>
    <div>
        <h5>Department Name: @Model.DepartmentName</h5>
        <p>Department ID: @Model.DepartmentId</p>
    </div>
    <form asp-action="DeleteDepartmentConfirmed" method="post">
        <input type="hidden" name="departmentId" value="@Model.DepartmentId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <button type="button" class="btn btn-secondary"
            onclick="location.href='@Url.Action("DisplayDepartments")'">Cancel</button>
    </form>
</div>
